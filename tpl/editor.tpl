<div class="habillage-editor__container" style="height: calc(100% - {{marginTop}}px); top: {{marginTop}}px;">

  <input class="habillage-editor__input" type="file" accept="">

  <div class="habillage-editor__add-media-button habillage-editor-buttons"></div>

  <div class="habillage-editor__add-media-popup">
    <div class="habillage-editor__add-media-folder" align="center">
      <p>{{importLabel}}</p>
      <div class="habillage-editor__add-media-video">
        <img src="img/buttons/video.png">
      </div>
      <div class="habillage-editor__add-media-audio">
        <img src="img/buttons/audio.png">
      </div>
      <div class="habillage-editor__add-media-image">
        <img src="img/buttons/image.png">
      </div>
    </div>
    <div class="habillage-editor__add-media-folder" align="center">
      <p>{{captureLabel}}</p>
      <div class="habillage-editor__add-media-micro">
        <img src="img/buttons/micro.png">
      </div>
      <div class="habillage-editor__add-media-camera">
        <img src="img/buttons/camera.png">
      </div>
    </div>
  </div>

  <div class="habillage-editor__preview-container">

  </div>

  <div class="habillage-editor__controls-container">

  </div>

  <div class="habillage-editor__thumbnails-container">

  </div>

  <div class="habillage-editor__overlay displayNone fadeOut">
    <h1 class="habillage-editor__overlay-message"></h1>
    <img class="habillage-editor__overlay-spinner-image" src="img/spinner.gif">
    <div class="habillage-editor__progressbar displayNone">
      <div class="habillage-editor__progressbar-value"></div>
    </dv>
  </div>

</div>
